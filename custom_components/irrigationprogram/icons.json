{
    "services": {
        "stop_programs":"mdi:stop",
        "run_zone":"mdi:play",
        "toggle_zone":"mdi:toggle-switch",
        "reset_runtime":"mdi:restore",
        "run_simulation":"mdi:check-decagram",
        "set_zone_status":"mdi:list-status",
        "toggle":"mdi:cog"
    },
    "entity": {
        "switch": {
            "ignore_sensor": {
                "state": {
                    "on": "mdi:leak-off",
                    "off": "mdi:leak"
                }
            },
            "enable_program": {
                "state": {
                    "on": "mdi:water",
                    "off": "mdi:alert-outline"
                }
            },
            "enable_zone": {
                "state": {
                    "on": "mdi:water",
                    "off": "mdi:alert-outline"
                }
            },
			"config":{
				"default": "mdi:cog"
			},
			"zone":{
				"default": "mdi:water"
			}
			,
			"program":{
				"default": "mdi:power"
			}
			,
			"pause":{
				"default": "mdi:pause",
				"state": {
					"on": "mdi:play",
                    "off": "mdi:pause"
				}
			}
       },
		"number":{
			"water":{
				"default":"mdi:timeline-clock-outline"
			},
			"volume":{
				"default":"mdi:car-coolant-level"
			},
			"wait":{
				"default":"mdi:timer-sand-empty"
			},
			"repeat":{
				"default":"mdi:sync"
			},
			"inter_zone_delay":{
				"default":"mdi:tune-variant"
			},
			"sunrise_offset":{
				"default":"mdi:weather-sunset-up"
			},
			"sunset_offset":{
				"default":"mdi:weather-sunset-down"
			}
        }
        ,
		"time":{
			"default":{
				"default":"mdi:clock-digital"
			}
		},
		"text":{
			"default":{
				"default":"mdi:clock-digital"
			}
		},
		"select":{
			"frequency":{
				"default":"mdi:repeat"
			}
		},
		"sensor": {
			"zone_status": {
				"default":"mdi:alert-outline",
				"state": {
					"off": "mdi:water-outline",
					"on": "mdi:sprinkler-variant",
					"disabled": "mdi:alert-outline",
					"pending": "mdi:timer-pause-outline",
					"eco": "mdi:leaf",
					"program_disabled": "mdi:alert-outline",
					"controller_disabled": "mdi:fuse-alert",
					"unavailable": "mdi:fuse-alert",
					"raining": "mdi:weather-pouring",
					"adjusted_off": "mdi:weather-pouring",
					"no_water_source": "mdi:water-alert-outline",
					"zone_disabled": "mdi:alert-outline"
				}
			},
			"zone_next_run":{
				"default":"mdi:clock-start"
			},
			"zone_last_ran":{
				"default":"mdi:clock-end"
			},
			"remaining_time":{
				"default":"mdi:timer-outline"
			}
		}
    }
}
